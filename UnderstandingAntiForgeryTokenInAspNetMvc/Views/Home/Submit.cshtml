@model UnderstandingAntiForgeryTokenInAspNetMvc.Models.Customer
@{
    ViewBag.Title = "Submit";
}

<h2>Submit</h2>
<div class="row">
    <div class="col-md-8">
        <section id="submitForm">
            @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" })
                    <div class="colo-md-10">
                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="colo-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-8">
        <section id="submitAjaxRequest">
            <input id="btnClick" type="button" value="Send Ajax Request" onclick="myFunction" class="btn btn-default" />
        </section>
